@model Accredit.GITAPI.Web.Models.User
@{
    ViewBag.Title = "Details";
}
<div class="col-lg-12">
    <p>
        <hr />
        <div class="col-md-4">
            <p>
                <img src="@Url.Content(Model.AvatarUrl)" alt="Image" class="col-xs-12" />
                <br />
                <h2 small>@Model.Name</h2>
                <h3 small>@Model.Username</h3>
                <address>@Model.Location</address>
            </p>
        </div>
        <div class="col-md-8">
            @if (Model.ReposList.Any())
            {
                <p>
                    <h3 small> Top 5 repositories </h3>
                    <table>
                        @foreach (var item in Model.ReposList)
                        {
                            <address>
                                <strong><a href="@Url.Content(item.URL)">@item.Name</a></strong><br />
                                <dfn>@item.Description</dfn><br />
                                @item.StargazersCount stargazers
                            </address>
                        }
                    </table>
                </p>
            }
            else
            {
                <p>No repositories to show</p>
            }
        </div>
    </p>
</div>