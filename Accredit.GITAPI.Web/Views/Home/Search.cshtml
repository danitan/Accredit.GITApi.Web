@model Accredit.GITAPI.Web.Models.User
@{
    ViewBag.Title = "Search";
    var errorMessage = ViewBag.Message != null && ViewBag.Message.Contains("[Error]") ? ViewBag.Message.Replace("[Error]", "") : "";
}

<div class="col-lg-12">
    <hr />
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="bg-warning">
            <h3>@errorMessage</h3>
        </div>
    }
    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
    {
        <div>
            <input type="text" name="Username" id="Username" />
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Username)</div>
            <input type="submit" value="Search" />
        </div>
    }
    <hr />
</div>
